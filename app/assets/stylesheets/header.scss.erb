.header {
  background-color: #<%= BLOG_CONFIG["background_color"] %>;
  // br required between these two elements for some reason
  color: #<%= BLOG_CONFIG["foreground_color"] %>;

  a {
    color: #<%= BLOG_CONFIG["foreground_color"] %>;
  }

  font-family: sans-serif;

  height: 80px;
  overflow: hidden;
  width: 100%;

  .header-content {
    max-width: 750px;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
    padding: 0 20px;
    padding-top: 50px;
  }

  .left-side {
    height: 100%;
    float: left;

    .title {
      display: inline-block;
      vertical-align: middle;
      font-size: 20px;
      font-weight: bold;
    }

    .title-author-rule {
      display: inline-block;
      vertical-align: middle;
      height: 40%;
      width: 1px;
      background-color: #<%= BLOG_CONFIG["foreground_color"] %>;
      margin: 0 10px;
      opacity: 0.1;
    }

    .author {
      display: inline-block;
      vertical-align: middle;
      font-size: 12px;

      @include MQ-Xsmall() {
        display: none;
      }
    }
  }

  .right-side {
    float: right;
    padding-top: 7px;
    .link {
      display: inline-block;
      margin-right: 10px;
      font-weight: bold;
      font-size: 16px;
    }
  }

}
